<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear0"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:padding="8dp"
		android:background="#7289DA"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:weightSum="1"
		android:visibility="visible">
		<LinearLayout
			android:id="@+id/trimbutton"
			android:layout_width="55dp"
			android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview6"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/trimicon"
				android:scaleType="centerInside" />
			<TextView
				android:id="@+id/textview8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Trim"
				android:textSize="10sp"
				android:textColor="#FFFFFF" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/videosizebutton"
			android:layout_width="55dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="15dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview8"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/resizeicon"
				android:scaleType="centerInside" />
			<TextView
				android:id="@+id/textview10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Video Size"
				android:textSize="10sp"
				android:textColor="#FFFFFF" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/replacebutton"
			android:layout_width="55dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="15dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview7"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/replaceicon"
				android:scaleType="centerInside" />
			<TextView
				android:id="@+id/textview9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Replace"
				android:textSize="10sp"
				android:textColor="#FFFFFF" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/soundbutton"
			android:layout_width="55dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="15dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview9"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/speakericon"
				android:scaleType="centerInside" />
			<TextView
				android:id="@+id/textview11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Sound"
				android:textSize="10sp"
				android:textColor="#FFFFFF" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/trimbarbackground"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#7289DA"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:visibility="gone">
		<LinearLayout
			android:id="@+id/trimbarview"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/videosizebackground"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:padding="8dp"
		android:background="#7289DA"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:visibility="gone">
		<SeekBar
			android:id="@+id/videosizeseekbar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:max="450"
			android:progressBackgroundTint="#FFFFFF"
			android:progressTint="#FFFFFF"
			android:thumbTint="#FFFFFF" />
	</LinearLayout>
</LinearLayout>
